<Window x:Class="InstAd128000.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:InstAd128000.Controls"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:instAd128000="clr-namespace:InstAd128000"
        xmlns:converters="clr-namespace:InstAd128000.Converters"
        mc:Ignorable="d"
        Title="MainWindow" SizeToContent="WidthAndHeight" WindowStyle="None" MouseDown="Window_MouseDown" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" AllowsTransparency="True"
        Background="Transparent">
    <Window.Resources>
        <Style TargetType="Button" x:Key="ButtonStyle">
            <Setter Property="FontFamily" Value="Comic Sans MS"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
            <Setter Property="IsEnabled" Value="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type instAd128000:MainWindow}}, Path=IsLogged}"></Setter>
        </Style>
        <Style TargetType="Button" x:Key="MenuButtonStyle">
            <Setter Property="DockPanel.Dock" Value="Right"/>
            <Setter Property="Margin" Value="5"></Setter>
        </Style>
        <Style TargetType="TextBlock" x:Key="OnStartDisclaimer">
            <Setter Property="HorizontalAlignment" Value="Center"></Setter>
            <Setter Property="VerticalAlignment" Value="Center"></Setter>
            <Setter Property="Text" Value="Please, login to proceed"></Setter>
            <Setter Property="TextAlignment" Value="Center"></Setter>
            <Setter Property="Margin" Value="10"></Setter>
            <Setter Property="TextWrapping" Value="Wrap"></Setter>
        </Style>
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter" />
    </Window.Resources>
    <Grid Margin="5">
        <Border BorderThickness="1" BorderBrush="SaddleBrown" CornerRadius="5">
            <Border.Background>
                <SolidColorBrush Opacity="0.9" Color="WhiteSmoke"/>
            </Border.Background>
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="300"></RowDefinition>
                </Grid.RowDefinitions>
                <Border Grid.Column="0" Grid.ColumnSpan="2" BorderThickness="1" BorderBrush="BurlyWood" CornerRadius="5" Background="BlanchedAlmond">
                    <DockPanel>
                        <Image Source="Files/Images/IconText/IconText5.png" Height="50" Margin="5"></Image>
                        <Button Style="{StaticResource MenuButtonStyle}" Click="Close_OnClick">Close it</Button>
                        <Button Style="{StaticResource MenuButtonStyle}" Click="Minimize_OnClick">Minimize</Button>
                        <Button Style="{StaticResource MenuButtonStyle}" Tag="Login" Click="AnyButton_OnClick" x:Name="LoginButton" IsEnabled="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type instAd128000:MainWindow}}, Path=IsLogged, Converter={StaticResource InverseBooleanConverter}}">Login</Button>
                    </DockPanel>
                </Border>
                <StackPanel Grid.Column="0" Grid.Row="1" x:Name="OptionsPanel" Margin="5">
                    <Button Style="{StaticResource ButtonStyle}" Tag="Follow" Click="AnyButton_OnClick">Follow</Button>
                    <Button Style="{StaticResource ButtonStyle}" Tag="SecondOptionTab" Click="AnyButton_OnClick">Second Option</Button>
                    <Button Style="{StaticResource ButtonStyle}" Tag="ThirdOptionTab" Click="AnyButton_OnClick">Third Option</Button>
                    <Button Style="{StaticResource ButtonStyle}" Tag="FourthOptionTab" Click="AnyButton_OnClick">Fourth Option</Button>
                    <Button Style="{StaticResource ButtonStyle}" Tag="FifthOptionTab" Click="AnyButton_OnClick">Fifth Option</Button>
                    <Button Style="{StaticResource ButtonStyle}" Tag="SixthOptionTab" Click="AnyButton_OnClick">Sixth Option</Button>
                    <Button Style="{StaticResource ButtonStyle}" Tag="SeventhOptionTab" Click="AnyButton_OnClick">Seventh Option</Button>
                </StackPanel>
                <Grid Grid.Column="1" Grid.Row="1" x:Name="Panel" Width="500" Height="Auto" Margin="5">
                    <TextBlock Style="{StaticResource OnStartDisclaimer}"/>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
