<Window x:Class="InstAd128000.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" SizeToContent="WidthAndHeight">
    <Window.Resources>
        <Style TargetType="Button" x:Key="ButtonStyle">
            <Setter Property="FontFamily" Value="Comic Sans MS"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="3*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <Button Style="{StaticResource ButtonStyle}" Tag="FirstOptionTab" Click="AnyButton_OnClick">First Option</Button>
            <Button Style="{StaticResource ButtonStyle}">Second Option</Button>
            <Button Style="{StaticResource ButtonStyle}">Third Option</Button>
            <Button Style="{StaticResource ButtonStyle}">Fourth Option</Button>
            <Button Style="{StaticResource ButtonStyle}">Fifth Option</Button>
            <Button Style="{StaticResource ButtonStyle}">Sixth Option</Button>
            <Button Style="{StaticResource ButtonStyle}">Seventh Option</Button>
        </StackPanel>
        <StackPanel Grid.Column="1" x:Name="Panel"></StackPanel>
    </Grid>
</Window>
