<Window x:Class="InstAd128000.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:InstAd128000.Controls"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:instAd128000="clr-namespace:InstAd128000"
        xmlns:converters="clr-namespace:InstAd128000.Converters"
        mc:Ignorable="d"
        Title="MainWindow" ResizeMode="CanResizeWithGrip" WindowStyle="None" 
        MouseLeftButtonDown="Window_MouseDown" WindowStartupLocation="CenterScreen"
        AllowsTransparency="True" Background="Transparent" 
        MinWidth="500" MinHeight="350">
    <Window.Resources>
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter" />
        <converters:BoolArrToBoolWithAndOperatorConverter x:Key="BoolArrToBoolWithAndOperatorConverter" />
        <Style TargetType="Button" x:Key="ButtonStyle">
            <Setter Property="FontFamily" Value="Comic Sans MS"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
            <Setter Property="IsEnabled">
                <Setter.Value>
                    <MultiBinding Converter="{StaticResource BoolArrToBoolWithAndOperatorConverter}" >
                        <Binding RelativeSource="{RelativeSource FindAncestor, AncestorType={x:Type instAd128000:MainWindow}}" Path="IsLogged"/>
                        <Binding RelativeSource="{RelativeSource FindAncestor, AncestorType={x:Type instAd128000:MainWindow}}" Path="IsNoProcessPerformed"/>
                    </MultiBinding>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="Button" x:Key="MenuButtonStyle">
            <Setter Property="DockPanel.Dock" Value="Right"/>
            <Setter Property="Margin" Value="5"></Setter>
            <Setter Property="Height" Value="30"></Setter>
        </Style>
        <Style TargetType="TextBlock" x:Key="OnStartDisclaimer">
            <Setter Property="HorizontalAlignment" Value="Center"></Setter>
            <Setter Property="VerticalAlignment" Value="Center"></Setter>
            <Setter Property="Text" Value="Please, login to proceed"></Setter>
            <Setter Property="TextAlignment" Value="Center"></Setter>
            <Setter Property="Margin" Value="10"></Setter>
            <Setter Property="TextWrapping" Value="Wrap"></Setter>
        </Style>
    </Window.Resources>
    <Grid Margin="5">
        <Border BorderThickness="1" BorderBrush="SaddleBrown" CornerRadius="5">
            <Border.Background>
                <SolidColorBrush Opacity="0.9" Color="WhiteSmoke"/>
            </Border.Background>
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Border Grid.Column="0" Grid.ColumnSpan="2" BorderThickness="1" BorderBrush="BurlyWood" CornerRadius="5" Background="BlanchedAlmond">
                   <Grid>
                       <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>
                        <Image Grid.Column="0" Source="Files/Images/IconText/IconText5.png" Height="50" Margin="5"></Image>
                        <Grid Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Button Grid.Column="0" Style="{StaticResource MenuButtonStyle}" Tag="Login" Click="AnyButton_OnClick" x:Name="LoginButton" 
                                    IsEnabled="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type instAd128000:MainWindow}}, Path=IsLogged, Converter={StaticResource InverseBooleanConverter}}">Login</Button>
                            <Button Grid.Column="1" Style="{StaticResource MenuButtonStyle}" Click="Maximize_OnClick">Maximize</Button>
                            <Button Grid.Column="2" Style="{StaticResource MenuButtonStyle}" Click="DefaultSize_OnClick">Default</Button>
                            <Button Grid.Column="3" Style="{StaticResource MenuButtonStyle}" Click="Minimize_OnClick">Minimize</Button>
                            <Button Grid.Column="4" Style="{StaticResource MenuButtonStyle}" Click="Close_OnClick">Close it</Button>
                        </Grid>
                    </Grid>
                </Border>
                <Border Grid.Column="0" Grid.Row="1" Margin="5" BorderBrush="BurlyWood" Background="BlanchedAlmond" BorderThickness="1" CornerRadius="5">
                    <Grid x:Name="OptionsPanel" >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Button Grid.Row="0" Style="{StaticResource ButtonStyle}" Tag="Follow" Click="AnyButton_OnClick">Follow</Button>
                        <Button Grid.Row="1" Style="{StaticResource ButtonStyle}" Tag="SearchTags" Click="AnyButton_OnClick">Search for tags</Button>
                        <Button Grid.Row="2" Style="{StaticResource ButtonStyle}" Tag="CommentByTag" Click="AnyButton_OnClick" x:Name="CommentByTag">Comment by tag</Button>
                        <Button Grid.Row="3" Style="{StaticResource ButtonStyle}" Tag="LikeByTag" Click="AnyButton_OnClick" x:Name="LikeByTag">Like by tag</Button>
                </Grid> 
                </Border>
                <Border Grid.Column="1" Grid.Row="1" Margin="5"  BorderThickness="1" BorderBrush="BurlyWood" CornerRadius="5" >
                    <Grid x:Name="Panel">
                        <TextBlock Style="{StaticResource OnStartDisclaimer}"/>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>
