<UserControl x:Class="InstAd128000.Controls.InstagramTabs.LikeByTag"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:InstAd128000.Controls"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d"  
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid x:Name="LikeByTagTabHolder" Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="1.1*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Column="0" Grid.Row="0" VerticalAlignment="Center">
            <TextBlock TextWrapping="Wrap">Лайкнуть посты с тегом: </TextBlock>
        </StackPanel>
        <TextBox Grid.Column="1" Grid.Row="0" x:Name="LikeTag" Margin="0,10,0,10" TextWrapping="Wrap"></TextBox>
        
        <TextBlock Grid.Row="2" Grid.Column="0" Text="Закончить лайкать в :" TextWrapping="Wrap"/>
        <StackPanel Grid.Column="1" Grid.Row="2">
            <xctk:TimePicker AllowSpin="True"  x:Name="WorkTime" Margin="5,5,5,5" ToolTip="Время, когда программа закончит лайкать." />
            <TextBlock Text="{Binding Value, ElementName=WorkTime, Converter={StaticResource RemainingTimeConverter}}"></TextBlock>
        </StackPanel>
        
        <Button Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="3" Margin="0,10,0,10" Width="100" Height="30" HorizontalAlignment="Right" Click="Like_OnClick" x:Name="LikeButton">Лайкнуть</Button>


        <TextBlock Grid.Column="0" Grid.Row="4" TextWrapping="Wrap" VerticalAlignment="Center">Постов лайкнуто:</TextBlock>
        <TextBlock Grid.Column="1" Grid.Row="4" TextWrapping="Wrap" VerticalAlignment="Center" x:Name="LikedPostsCount"></TextBlock>
    </Grid>
</UserControl>
